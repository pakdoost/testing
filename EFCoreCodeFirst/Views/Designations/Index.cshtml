@model IEnumerable<EFCoreCodeFirst.Models.Designation>

@{
    ViewData["Title"] = "Index";
}



<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-light table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DesignationName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DesignationName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DesignationID" class="btn btn-dark">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DesignationID" class="btn btn-success">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DesignationID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
